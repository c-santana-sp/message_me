<h4 class="ui center aligned medium icon header">
	<i class="circular orange coffee icon"></i>
	Say something
</h4>
<div class="ui two column grid">
	<div class="twelve wide column">
		<div class="ui fluid raised card chatbox">
			<div class="ui content">
				<div class="ui small feed">
					<%= render @messages %>
				</div>
			</div>

			<div class="extra content">
				<%= form_for(@message, html: { class: "ui reply form", role: "form" }, url: message_path) do |f| %>
				<!-- <form class="ui reply form"> -->
					<div class="field">
						<div class="ui fluid icon input">
							<%= f.text_field :body, placeholder: "Type a message..."%>
							<%= f.button '<i class="bordered inverted orange icon edit"></i>'.html_safe %>
							<!-- <input type="text" placeholder="Type a message..."> -->
							<!-- <i class="bordered inverted orange icon edit"></i> -->
						</div>
					</div>
				<!-- </form> -->
				<% end %>
			</div>
		</div>
	</div>
	<div class="ui four wide column">
		<div class="ui fluid raised card chatbox">
			<div class="ui content">
				<div class="ui inverted vertical menu">
					<a class="active item">
						Home
					</a>
					<a class="item">
						Messages
					</a>
					<a class="item">
						Friends
					</a>
				</div>
			</div>
		</div>
	</div>
</div>